---
import personalData from '@data/personal.json';
---

<section id="projects" class="projects section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="section-label">Mi Trabajo</span>
      <h2 class="section-title">Proyectos Destacados</h2>
      <p class="section-description">
        Aquí están algunos de los proyectos en los que he trabajado y aprendido
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="projects-grid">
      {personalData.experience.map((project, index) => (
        <div class="project-card card card-glow">
          <!-- Project Header -->
          <div class="project-header">
            <div class="project-title-container">
              <h3 class="project-title">{project.title}</h3>
              <span class="project-period">{project.period}</span>
            </div>
          </div>

          <!-- Project Description -->
          <p class="project-description">
            {project.description}
          </p>

          <!-- Technologies -->
          <div class="technologies">
            {project.technologies.map(tech => (
              <span class="tech-badge">{tech}</span>
            ))}
          </div>

          <!-- Highlights -->
          <div class="highlights">
            <div class="highlights-label">Destacados:</div>
            <ul class="highlights-list">
              {project.highlights.map(highlight => (
                <li class="highlight-item">
                  <svg class="highlight-icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Project Links -->
          <div class="project-links">
            {project.links?.demo && (
              <a 
                href={project.links.demo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="project-link demo-link"
                aria-label="Ver demostración del proyecto"
              >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="1"></circle>
                  <path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  <path d="M8 12h8M12 8v8"></path>
                </svg>
                <span>Ver Demo</span>
              </a>
            )}
            {project.links?.github && (
              <a 
                href={project.links.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="project-link github-link"
                aria-label="Ver código en GitHub"
              >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span>GitHub</span>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="projects-cta">
      <p>¿Quieres ver más proyectos?</p>
      <a href={personalData.social.github} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
        Visita mi GitHub
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Projects Section */
  .projects {
    position: relative;
    background: var(--color-bg-primary);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-label {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: rgba(0, 212, 255, 0.1);
    color: var(--color-accent-primary);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-4);
  }

  .section-title {
    margin-bottom: var(--space-3);
    font-size: var(--text-4xl);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  /* Project Card */
  .project-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: var(--color-bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-normal) var(--ease-out);
  }

  .project-card:hover {
    border-color: var(--color-accent-primary);
    box-shadow: 0 0 20px rgba(0, 212, 255, 0.2);
    transform: translateY(-8px);
  }

  /* Project Header */
  .project-header {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--border-color);
  }

  .project-title-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .project-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin: 0;
  }

  .project-period {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    font-weight: var(--font-medium);
  }

  /* Project Description */
  .project-description {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
    flex-grow: 1;
  }

  /* Technologies */
  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .tech-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-3);
    background: rgba(0, 212, 255, 0.1);
    color: var(--color-accent-primary);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    transition: all var(--transition-fast) var(--ease-out);
  }

  .tech-badge:hover {
    background: rgba(0, 212, 255, 0.2);
    border-color: var(--color-accent-primary);
    transform: translateY(-2px);
  }

  /* Highlights */
  .highlights {
    margin-bottom: var(--space-6);
    padding: var(--space-4);
    background: var(--overlay-light);
    border-radius: var(--radius-lg);
  }

  .highlights-label {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-accent-primary);
    margin-bottom: var(--space-3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .highlight-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-normal);
  }

  .highlight-icon {
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: 2px;
  }

  /* Project Links */
  .project-links {
    display: flex;
    gap: var(--space-3);
    margin-top: auto;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-color);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    transition: all var(--transition-fast) var(--ease-out);
    border: 1.5px solid;
    cursor: pointer;
    text-decoration: none;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
  }

  .project-link:active {
    transform: scale(0.98);
  }

  .project-link:focus-visible {
    outline: 2px solid var(--color-accent-primary);
    outline-offset: 2px;
  }

  .demo-link {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.25) 0%, rgba(0, 212, 255, 0.15) 100%);
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
    box-shadow: 0 0 15px rgba(0, 212, 255, 0.2);
  }

  .demo-link:hover {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.35) 0%, rgba(0, 212, 255, 0.25) 100%);
    border-color: var(--color-accent-primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 212, 255, 0.35);
  }

  .github-link {
    background: rgba(255, 255, 255, 0.08);
    color: var(--color-text-primary);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .github-link:hover {
    background: rgba(255, 255, 255, 0.15);
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.1);
  }

  /* Call to Action */
  .projects-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-12);
    text-align: center;
    background: var(--overlay-light);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-color);
  }

  .projects-cta p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .projects-cta .btn {
    display: inline-flex;
    gap: var(--space-2);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .section-title {
      font-size: var(--text-3xl);
    }

    .project-title {
      font-size: var(--text-lg);
    }

    .projects-cta {
      flex-direction: column;
      padding: var(--space-8);
    }

    .projects-cta .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 1023px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    }
  }
</style>
