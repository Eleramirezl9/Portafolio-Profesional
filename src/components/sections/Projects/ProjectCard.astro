---
/**
 * PROJECT CARD COMPONENT - Componente Reutilizable
 *
 * Sigue Single Responsibility Principle
 * Renderiza UNA experiencia/proyecto
 *
 * Props:
 * - project: Experience (un proyecto individual)
 * - index: número para identificación
 */

import type { Experience } from '@data/types';
import Badge from '@components/ui/Badge.astro';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import styles from './ProjectCard.module.css';

interface Props {
  project: Experience;
  index?: number;
}

const { project, index = 0 } = Astro.props;

// Determinar si la imagen es ImageMetadata o string
const isOptimizedImage = (img: unknown): img is ImageMetadata => {
  return typeof img === 'object' && img !== null && 'src' in img && 'width' in img && 'height' in img;
};

const imageSrc = isOptimizedImage(project.image) ? project.image : undefined;
---

<div class={styles.projectCard}>
  {/* Project Header */}
  <div class={styles.projectHeader}>
    {imageSrc ? (
      <div class={styles.projectImageContainer}>
        <Image
          src={imageSrc}
          alt={`Vista previa de ${project.title}`}
          class={styles.projectImage}
          widths={[400, 600, 800]}
          sizes={`(max-width: 640px) 400px, (max-width: 1024px) 600px, 800px`}
          format="webp"
          quality="mid"
        />
      </div>
    ) : (
      <div class={styles.projectImagePlaceholder}>
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
        <span>Sin imagen</span>
      </div>
    )}
    <div class={styles.projectTitleContainer}>
      <h3 class={styles.projectTitle}>{project.title}</h3>
      <span class={styles.projectPeriod}>{project.period}</span>
    </div>
  </div>

  {/* Project Description */}
  <p class={styles.projectDescription}>
    {project.description}
  </p>

  {/* Technologies */}
  <div class={styles.technologies}>
    {project.technologies.map(tech => (
      <Badge variant="primary">{tech}</Badge>
    ))}
  </div>

  {/* Highlights */}
  <div class={styles.highlights}>
    <div class={styles.highlightsLabel}>Destacados:</div>
    <ul class={styles.highlightsList}>
      {project.highlights.map(highlight => (
        <li class={styles.highlightItem}>
          <svg class={styles.highlightIcon} width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
          </svg>
          <span>{highlight}</span>
        </li>
      ))}
    </ul>
  </div>

  {/* Project Links */}
  {project.links && (
    <div class={styles.projectLinks}>
      {project.links.demo && (
        <a
          href={project.links.demo}
          target="_blank"
          rel="noopener noreferrer"
          class={`${styles.projectLink} ${styles.demoLink}`}
          aria-label={`Ver demostración: ${project.title}`}
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="1"></circle>
            <path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            <path d="M8 12h8M12 8v8"></path>
          </svg>
          <span>Ver Demo</span>
        </a>
      )}
      {project.links.github && (
        <a
          href={project.links.github}
          target="_blank"
          rel="noopener noreferrer"
          class={`${styles.projectLink} ${styles.githubLink}`}
          aria-label={`Ver código en GitHub: ${project.title}`}
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>GitHub</span>
        </a>
      )}
    </div>
  )}
</div>
