---
import personalData from '@data/personal.json';
---

<section id="about" class="about section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="section-label">Conóceme</span>
      <h2 class="section-title">Sobre Mí</h2>
      <p class="section-description">
        Desarrollador apasionado por crear software de calidad
      </p>
    </div>

    <div class="about-content">
      <!-- Bio -->
      <div class="about-bio">
        <h3 class="bio-title">
          {personalData.title}
        </h3>
        <p class="bio-text">
          {personalData.bio}
        </p>

        <!-- Philosophy -->
        <div class="philosophy">
          <svg class="quote-icon" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
          </svg>
          <p class="philosophy-text">
            {personalData.philosophy}
          </p>
        </div>

        <!-- Education -->
        <div class="education-card card">
          <div class="education-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
              <path d="M6 12v5c3 3 9 3 12 0v-5"/>
            </svg>
          </div>
          <div class="education-info">
            <h4 class="education-title">{personalData.degree}</h4>
            <p class="education-university">{personalData.university}</p>
            <span class="education-status badge badge-success">{personalData.degreeStatus}</span>
          </div>
        </div>

        <!-- Availability -->
        <div class="availability">
          <div class="availability-status">
            <span class="status-indicator"></span>
            <span class="status-text">{personalData.availability.status}</span>
          </div>
          <p class="availability-details">
            {personalData.availability.type} · {personalData.availability.position}
          </p>
        </div>
      </div>

      <!-- Stats & Achievements -->
      <div class="about-stats">
        <!-- Key Stats -->
        <div class="stats-grid">
          <div class="stat-card card-glow card">
            <div class="stat-number text-gradient">5+</div>
            <div class="stat-label">Años de Formación Académica</div>
          </div>
          <div class="stat-card card-glow card">
            <div class="stat-number text-gradient">15+</div>
            <div class="stat-label">Tecnologías Dominadas</div>
          </div>
          <div class="stat-card card-glow card">
            <div class="stat-number text-gradient">4+</div>
            <div class="stat-label">Proyectos Completados</div>
          </div>
          <div class="stat-card card-glow card">
            <div class="stat-number text-gradient">100%</div>
            <div class="stat-label">Compromiso con Calidad</div>
          </div>
        </div>

        <!-- Achievements -->
        <div class="achievements">
          <h4 class="achievements-title">Logros Destacados</h4>
          <div class="achievements-list">
            {personalData.achievements.map(achievement => (
              <div class="achievement-item">
                <div class="achievement-icon">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                </div>
                <div class="achievement-content">
                  <h5 class="achievement-title">{achievement.title}</h5>
                  <p class="achievement-description">{achievement.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Languages -->
        <div class="languages card">
          <h4 class="languages-title">Idiomas</h4>
          <div class="languages-list">
            {personalData.languages.map(lang => (
              <div class="language-item">
                <div class="language-header">
                  <span class="language-name">{lang.name}</span>
                  <span class="language-level badge">{lang.level}</span>
                </div>
                {lang.note && (
                  <p class="language-note">{lang.note}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-label {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: rgba(0, 212, 255, 0.1);
    color: var(--color-accent-primary);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-4);
  }

  .section-title {
    margin-bottom: var(--space-3);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  /* About Content */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  /* Bio */
  .about-bio {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .bio-title {
    color: var(--color-accent-primary);
    font-size: var(--text-2xl);
  }

  .bio-text {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  /* Philosophy */
  .philosophy {
    position: relative;
    padding: var(--space-6);
    background: var(--overlay-light);
    border-left: 4px solid var(--color-accent-primary);
    border-radius: var(--radius-md);
  }

  .quote-icon {
    color: var(--color-accent-primary);
    opacity: 0.3;
    margin-bottom: var(--space-3);
  }

  .philosophy-text {
    font-style: italic;
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
  }

  /* Education Card */
  .education-card {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
  }

  .education-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 212, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-accent-primary);
  }

  .education-info {
    flex: 1;
  }

  .education-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }

  .education-university {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  /* Availability */
  .availability {
    padding: var(--space-4);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid var(--color-success);
    border-radius: var(--radius-md);
  }

  .availability-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .status-indicator {
    width: 12px;
    height: 12px;
    background: var(--color-success);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .status-text {
    font-weight: var(--font-semibold);
    color: var(--color-success);
  }

  .availability-details {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  /* Stats */
  .about-stats {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  .stat-card {
    padding: var(--space-6);
    text-align: center;
  }

  .stat-number {
    font-size: var(--text-5xl);
    font-weight: var(--font-extrabold);
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  /* Achievements */
  .achievements {
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-color);
  }

  .achievements-title {
    margin-bottom: var(--space-6);
    font-size: var(--text-xl);
  }

  .achievements-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .achievement-item {
    display: flex;
    gap: var(--space-3);
  }

  .achievement-icon {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 212, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-accent-primary);
  }

  .achievement-content {
    flex: 1;
  }

  .achievement-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-1);
  }

  .achievement-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  /* Languages */
  .languages {
    padding: var(--space-6);
  }

  .languages-title {
    margin-bottom: var(--space-4);
    font-size: var(--text-xl);
  }

  .languages-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .language-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .language-name {
    font-weight: var(--font-semibold);
  }

  .language-note {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  /* Responsive */
  @media (max-width: 1023px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 767px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .stat-number {
      font-size: var(--text-4xl);
    }
  }
</style>
