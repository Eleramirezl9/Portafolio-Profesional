---
import personalData from '@data/personal.json';
---

<section id="hero" class="hero">
  <div class="container">
    <div class="hero-content">
      <!-- Greeting -->
      <div class="greeting">
        <svg class="greeting-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        <span class="greeting-text">Hola, soy</span>
      </div>

      <!-- Name -->
      <h1 class="hero-title">
        <span class="name-highlight text-gradient">{personalData.name.split(' ')[0]}</span>
        <br>
        <span class="name-rest">{personalData.name.split(' ').slice(1).join(' ')}</span>
      </h1>

      <!-- Title & Subtitle -->
      <h2 class="hero-subtitle">
        {personalData.title}
      </h2>

      <p class="hero-description">
        {personalData.subtitle}
      </p>

      <!-- Tags -->
      <div class="hero-tags">
        <span class="badge badge-primary">Clean Architecture</span>
        <span class="badge badge-primary">TDD</span>
        <span class="badge badge-primary">Full-Stack</span>
        <span class="badge badge-primary">Node.js</span>
        <span class="badge badge-primary">React</span>
      </div>

      <!-- CTA Buttons -->
      <div class="hero-cta">
        <a href="#projects" class="btn btn-primary">
          Ver Proyectos
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 10h12m0 0l-6-6m6 6l-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="#contact" class="btn btn-secondary">
          Contacto
        </a>
      </div>

      <!-- Social Links -->
      <div class="hero-social">
        <a
          href={personalData.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label="GitHub"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a
          href={personalData.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label="LinkedIn"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a
          href={`mailto:${personalData.email}`}
          class="social-link"
          aria-label="Email"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="hero-decoration">
      <div class="decoration-circle decoration-1"></div>
      <div class="decoration-circle decoration-2"></div>
      <div class="decoration-circle decoration-3"></div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <div class="mouse">
      <div class="wheel"></div>
    </div>
    <span class="scroll-text">Scroll</span>
  </div>
</section>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: var(--header-height);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
  }

  /* Greeting */
  .greeting {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .greeting-icon {
    color: var(--color-accent-primary);
    flex-shrink: 0;
  }

  /* Title */
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: var(--space-4);
    font-weight: var(--font-extrabold);
  }

  .name-highlight {
    display: inline-block;
    animation: fadeInUp 0.6s ease-out;
    will-change: transform, opacity;
  }

  .name-rest {
    display: inline-block;
    animation: fadeInUp 0.6s ease-out 0.1s backwards;
    will-change: transform, opacity;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--color-accent-primary);
    margin-bottom: var(--space-3);
    font-weight: var(--font-semibold);
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
    will-change: transform, opacity;
  }

  /* Description */
  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
    max-width: 600px;
    animation: fadeInUp 0.6s ease-out 0.3s backwards;
    will-change: transform, opacity;
  }

  /* Tags */
  .hero-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-8);
    animation: fadeInUp 0.6s ease-out 0.4s backwards;
    will-change: transform, opacity;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    animation: fadeInUp 0.6s ease-out 0.5s backwards;
    will-change: transform, opacity;
  }

  /* Social Links */
  .hero-social {
    display: flex;
    gap: var(--space-4);
    animation: fadeInUp 0.6s ease-out 0.6s backwards;
    will-change: transform, opacity;
  }

  /* Quitar will-change después de la animación */
  .name-highlight,
  .name-rest,
  .hero-subtitle,
  .hero-description,
  .hero-tags,
  .hero-cta,
  .hero-social {
    animation-fill-mode: forwards;
  }

  @media (prefers-reduced-motion: no-preference) {
    .name-highlight:not(:hover),
    .name-rest:not(:hover),
    .hero-subtitle:not(:hover),
    .hero-description:not(:hover),
    .hero-tags:not(:hover),
    .hero-cta:not(:hover),
    .hero-social:not(:hover) {
      animation-play-state: running;
    }
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: var(--radius-md);
    background: var(--overlay-light);
    border: 1px solid var(--border-color);
    color: var(--color-text-secondary);
    transition: all var(--transition-normal) var(--ease-out);
  }

  .social-link:hover {
    color: var(--color-accent-primary);
    background: rgba(0, 212, 255, 0.1);
    border-color: var(--color-accent-primary);
    transform: translateY(-2px);
  }

  /* Decorative Elements */
  .hero-decoration {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(0, 212, 255, 0.15) 0%,
      transparent 70%
    );
    filter: blur(40px);
    animation: float 6s ease-in-out infinite;
  }

  .decoration-1 {
    width: 400px;
    height: 400px;
    top: 10%;
    right: 10%;
    animation-delay: 0s;
  }

  .decoration-2 {
    width: 300px;
    height: 300px;
    bottom: 20%;
    left: 10%;
    animation-delay: 2s;
  }

  .decoration-3 {
    width: 200px;
    height: 200px;
    top: 50%;
    right: 30%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
    }
    33% {
      transform: translateY(-20px) translateX(10px);
    }
    66% {
      transform: translateY(10px) translateX(-10px);
    }
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-muted);
    animation: fadeIn 1s ease-out 1.5s backwards;
  }

  .mouse {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-text-muted);
    border-radius: 12px;
    position: relative;
  }

  .wheel {
    width: 4px;
    height: 8px;
    background: var(--color-text-muted);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll 2s ease-in-out infinite;
  }

  @keyframes scroll {
    0% {
      opacity: 1;
      top: 8px;
    }
    100% {
      opacity: 0;
      top: 24px;
    }
  }

  .scroll-text {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Invisibilidad inicial */
  .name-highlight,
  .name-rest,
  .hero-subtitle,
  .hero-description,
  .hero-tags,
  .hero-cta,
  .hero-social {
    opacity: 0;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Responsive */
  @media (max-width: 767px) {
    .hero {
      min-height: calc(100vh - var(--header-height));
      padding-top: var(--space-8);
      padding-bottom: var(--space-12);
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.5rem;
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .decoration-circle {
      display: none;
    }
  }
</style>
