---
import '@styles/global.css';
import AnimatedBackground from '@components/layout/AnimatedBackground.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Eddy Alexander Ramírez | Desarrollador Full-Stack',
  description = 'Desarrollador Full-Stack especializado en Clean Architecture, Node.js, React y desarrollo de aplicaciones escalables. Portafolio de proyectos y experiencia profesional.',
  image = '/images/og-image.png'
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : `http://localhost:4321${Astro.url.pathname}`;

const imageURL = Astro.site
  ? new URL(image, Astro.site)
  : `http://localhost:4321${image}`;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={imageURL}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={imageURL}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Fonts - Preload para performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    rel="preload"
    as="style"
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500;600&display=swap"
  >
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500;600&display=swap"
    rel="stylesheet"
    media="print"
    onload="this.media='all'"
  >
  <noscript>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500;600&display=swap"
      rel="stylesheet"
    >
  </noscript>

  <!-- Theme Color -->
  <meta name="theme-color" content="#0a0e27">
</head>
<body>
  <!-- Skip to main content (accessibility) -->
  <a href="#main-content" class="skip-to-main">
    Saltar al contenido principal
  </a>

  <!-- Animated Background -->
  <AnimatedBackground />

  <!-- Main Content -->
  <main id="main-content">
    <slot />
  </main>

  <!-- Font Loading Script -->
  <script is:inline>
    // Detectar cuando las fuentes están cargadas
    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(() => {
        document.body.classList.add('fonts-loaded');
      });
    } else {
      // Fallback para navegadores antiguos
      window.addEventListener('load', () => {
        document.body.classList.add('fonts-loaded');
      });
    }
  </script>
</body>
</html>

<style>
  /* Ensure smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Body base styles */
  body {
    position: relative;
    min-height: 100vh;
    overflow-x: hidden;
  }

  /* Main content positioning */
  main {
    position: relative;
    z-index: 1;
  }

  /* Skip to main content link (accessibility) */
  .skip-to-main {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--color-accent);
    color: var(--color-dark);
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 0 0 4px 0;
    z-index: 100;
  }

  .skip-to-main:focus {
    top: 0;
  }
</style>
